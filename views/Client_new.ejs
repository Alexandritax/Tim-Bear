<!DOCTYPE html>
<html lang="en" lang="es">
    <head>
        <meta charset="UTF-8" />
        <title>TIM-BEAR</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
    </head>
    <body>
        <div class="root">
            <form action="">
                <br>
                <br>
                <br>
                <div class="text-center">
                    <h1 class="form-register__title">Registro</h1>
                </div>
                <div class="modal-dialog">
                    <br>
                    <br>
                    <br>
                    <h4 class="text-center">Paso 1</h4>
                    <div class="modal-content">
                        <div class="modal-body">
                            <label class="form-label">Nombre:</label>
                            <input name="cliente_nombre" type="text" class="form-control">
                            <br>
                            <label class="form-label">Apellidos:</label>
                            <input name="cliente_apellidos" type="text" class="form-control">
                        </div>
                        <div class="modal-footer">
                            <a class="btn btn-success" href="#s2">Siguiente</a>
                        </div>
                    </div>
                    <br>
                    <br>
                    <br>
                    <br>
                    <br>
                    <br>
                    <br>
                    <br>
                    <br>
                    <br>
                    <br>
                    <br>
                    <br>
                    <br>
                    <br>
                    <br>
                    <br id="s2">
                    <br>
                    <br>
                    <br>
                    <br>
                    <h4 class="text-center">Paso 2</h4>
                    <br>
                    <br>
                    <br>
                    <br>
                    <div class="modal-content">
                        <div class="modal-body">
                            <label class="form-label">DNI:</label>
                            <input name="cliente_dni" type="text" class="form-control">
                            <br>
                            <label class="form-label">Foto:</label>
                            <input name="cliente_foto" type="file">
                        </div>
                        <div class="modal-footer step__footer">
                            <button type="button" class="btn btn-success"
                            data-to_step="1" data-step="2">Regresar</button>
                            <button type="button" class="btn btn-success"
                            data-to_step="3" data-step="2">Siguiente</button>
                        </div>
                    </div>
                    <div class="modal-content">
                        <div class="modal-body">
                            <label class="form-label">Correo electrónico:</label>
                            <input name="cliente_correo" type="text" class="form-control step__input">
                            <br>
                            <label class="form-label">Contraseña:</label>
                            <input name="cliente_contrasenia" type="password" class="form-control step__input">
                            <br>
                            <label class="form-label">Repetir contraseña:</label>
                            <input name="cliente_contrasenia2" type="password" class="form-control step__input">
                            <br>
                            <label class="form-label">Teléfono:</label>
                            <input name="cliente_telefono" type="text" class="form-control step__input">
                        </div>
                        <div class="modal-footer step__body">
                            <button type="button" class="btn btn-success step__button--back"
                            data-to_step="2" data-step="3">Regresar</button>
                            <button type="button" class="btn btn-success step__button--next"
                            data-to_step="4" data-step="3">Siguiente</button>
                        </div>
                    </div>
                    <div class="modal-content step" id="step-4">
                        <div class="modal-body step__body">
                            <label class="form-label">Dirección:</label>
                            <input name="cliente_direccion" type="text" class="form-control step__input">
                            <br>
                            <label class="form-label">Departamento:</label>
                            <select name="cliente_departmento_id" class="form-select">
                                <option value="-1">----- Seleccione una opción -----</option>
                            </select>
                            <br>
                            <label class="form-label">Provincia:</label>
                            <select name="cliente_provincia_id" class="form-select">
                                <option value="-1">----- Seleccione una opción -----</option>
                            </select>
                            <br>
                            <label class="form-label">Distrito:</label>
                            <select name="cliente_distrito_id" class="form-select">
                                <option value="-1">----- Seleccione una opción -----</option>
                                <% distritos.forEach( (distrito) => { %>
                                    <option value="<%= distrito.id%>"><%= distrito.nombre %></option>
                                <% }) %>
                            </select>
                        </div>
                        <div class="modal-footer step__body">
                            <button type="button" class="btn btn-success step__button--back"
                            data-to_step="3" data-step="4">Regresar</button>
                            <button type="button" class="btn btn-success step__button--next"
                            data-to_step="5" data-step="4">Siguiente</button>
                        </div>
                    </div>
                    <div class="modal-content step" id="step-5">
                        <div class="modal-body step__body">
                            <input name="cliente_pep" type="checkbox" class="form-check-input">
                            <label class="form-check-label">PEP</label>
                        </div>
                        <div class="modal-footer step__body">
                            <button type="button" class="btn btn-success step__button--back"
                            data-to_step="4" data-step="5">Regresar</button>
                            <button type="submit" class="btn btn-success step__button">Finalizar</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </body>
</html>