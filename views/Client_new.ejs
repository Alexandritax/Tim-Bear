                    <br id="paso4">
                    <br>
                    <br>
                    <br>
                    <br>
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Paso 4</h5>
                        </div>
                        <div class="modal-body">
                            <label class="form-label">Dirección:</label>
                            <input name="cliente_direccion" type="text" class="form-control">
                            <br>
                            <label class="form-label">Departamento:</label>
                            <select name="cliente_departmento_id" class="form-select">
                                <option value="-1">----- Seleccione una opción -----</option>
                                <% departamentos.forEach( (departamento) => { %>
                                    <option value="<%= departamento.id%>"><%= departamento.nombre %></option>
                                <% }) %>
                            </select>
                            <br>
                            <label class="form-label">Provincia:</label>
                            <select name="cliente_provincia_id" class="form-select">
                                <option value="-1">----- Seleccione una opción -----</option>
                                <% provincias.forEach( (provincia) => { %>
                                    <option value="<%= provincia.id%>"><%= provincia.nombre %></option>
                                <% }) %>
                            </select>
                            <br>
                            <label class="form-label">Distrito:</label>
                            <select name="cliente_distrito_id" class="form-select">
                                <option value="-1">----- Seleccione una opción -----</option>
                                <% distritos.forEach( (distrito) => { %>
                                    <option value="<%= distrito.id%>"><%= distrito.nombre %></option>
                                <% }) %>
                            </select>
                        </div>
                        <div class="modal-footer step__body">
                            <a class="btn btn-success" href="#paso3">Regresar</a>
                            <a class="btn btn-success" href="#paso5">Siguiente</a>
                        </div>
